@inherits LayoutComponentBase

@inject IJwtAuthService AuthService

<CascadingAuthenticationState>
    <div class="page">
        <div class="sidebar">
            <NavMenu/>
        </div>
    
        <main>
            <div class="top-row px-4">
                <AuthorizeView>
                    <Authorized>
                        <NavLink class="nav-link" href="@ChangePasswordPage.Path">Change password</NavLink>
                        <NavLink class="nav-link" href="@LoginPage.Path" @onclick="async () => await AuthService!.LogoutAsync()">Log out</NavLink>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink class="nav-link" href="@RegistrationPage.Path">Register</NavLink>
                        <NavLink class="nav-link" href="@LoginPage.Path">Log in</NavLink>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
            <article class="content px-4">
                @if (Body is not null)
                {
                    @Body
                }
            </article>
        </main>
    </div>
</CascadingAuthenticationState>